.row
  .col-sm-10.col-sm-offset-1
    .panel.panel-primary
      .panel-heading.text-center
        - if @page_title
          %h2
            = @page_title
      .panel-body
        = simple_format(@job.body)
      .panel-footer.text-light.clearfix
        - if current_user.admin
          %p
            = link_to 'Edit', edit_job_path(@job), class: 'btn btn-success'
        - else
          %p
            - if @job.open
              %h4
                We are looking for people to fill this position!
                = button_to 'Apply', user_jobs_add_path, class: 'btn btn-success pull-right'
            - else
              %h4 We're sorry, but this job has already been filled.