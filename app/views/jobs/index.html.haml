.row
  .col-sm-10.col-sm-offset-1
    - if @page_title
      %h2
        = @page_title
    - @jobs.each do |job|
      -if job.open
        .panel.panel-primary
          .panel-heading
            %h4.job-title
              = job.title
              = link_to "See Job", job, class: 'btn btn-primary pull-right'
          .panel-body
            %p= job.summary
= link_to 'New Job', new_job_path
